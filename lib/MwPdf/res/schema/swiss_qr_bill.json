{
  "additionalProperties": false,
  "definitions": {
    "Address": {
      "additionalProperties": false,
      "type": "object",
      "oneOf": [
        {
          "properties": {
            "street": {
              "maxLength": 70
            },
            "buildingNumber": {
              "maxLength": 16
            },
            "postalCode": {
              "minLength": 1,
              "maxLength": 16
            },
            "city": {
              "minLength": 1,
              "maxLength": 35
            }
          },
          "required": [
            "name",
            "country",
            "postalCode",
            "city"
          ]
        },
        {
          "properties": {
            "addressLine1": {
              "maxLength": 70
            },
            "addressLine2": {
              "maxLength": 70,
              "minLength": 1
            }
          },
          "required": [
            "name",
            "country",
            "addressLine2"
          ]
        }
      ],
      "properties": {
        "name": {
          "minLength": 1,
          "maxLength": 70
        },
        "country": {
          "minLength": 1,
          "maxLength": 3
        }
      }
    }
  },
  "description": "swiss qr bill (handmade)",
  "properties": {
    "widget": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "codeOnly": {
          "type": "boolean"
        },
        "language": {
          "type": "string",
          "enum": ["DE", "FR"]
        }
      }
    },
    "creditor": {
      "$ref": "#/definitions/Address"
    },
    "creditorInformation": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "iban": {
          "type": "string",
          "pattern": "^[A-Z]{2}[0-9]{2}[A-Z0-9]{1,30}$",
          "minLength": 15,
          "maxLength": 34
        }
      },
      "required": [
        "iban"
      ]
    },
    "ultimateDebtor": {
      "$ref": "#/definitions/Address"
    },
    "paymentAmountInformation": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "amount": {
          "type": "number",
          "minimum": 0,
          "maximum": 999999999.99
        },
        "currency": {
          "type": "string",
          "enum": [
            "CHF",
            "EUR"
          ]
        }
      },
      "required": [
        "currency"
      ]
    },
    "paymentReference": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "QRR",
            "SCOR",
            "NON"
          ]
        },
        "reference": {
          "additionalProperties": false,
          "type": "object",
          "properties": {
            "customerIdentificationNumber": {
              "type": "string"
            },
            "referenceNumber": {
              "type": "string"
            }
          },
          "required": [
            "customerIdentificationNumber",
            "referenceNumber"
          ]
        }
      },
      "required": [
        "type",
        "reference"
      ]
    }
  },
  "required": [
    "creditor",
    "creditorInformation",
    "paymentAmountInformation",
    "paymentReference"
  ],
  "type": "object"
}